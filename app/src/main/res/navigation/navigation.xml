<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/login">

    <fragment
        android:id="@+id/login"
        android:name="com.example.tableorder.Login"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_main"
            app:destination="@id/main" />
        <action
            android:id="@+id/action_login_to_signUp"
            app:destination="@id/signUp" />
        <action
            android:id="@+id/action_login_to_findId"
            app:destination="@id/findId" />
        <action
            android:id="@+id/action_login_to_resetPassword"
            app:destination="@id/resetPassword" />
    </fragment>
    <fragment
        android:id="@+id/main"
        android:name="com.example.tableorder.Main"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <argument
            android:name="UserName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/signUp"
        android:name="com.example.tableorder.SignUp"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUp_to_login"
            app:destination="@id/login" />
    </fragment>
    <fragment
        android:id="@+id/findId"
        android:name="com.example.tableorder.FindId"
        android:label="fragment_find_id"
        tools:layout="@layout/fragment_find_id" />
    <fragment
        android:id="@+id/resetPassword"
        android:name="com.example.tableorder.ResetPassword"
        android:label="fragment_reset_password"
        tools:layout="@layout/fragment_reset_password" />
</navigation>